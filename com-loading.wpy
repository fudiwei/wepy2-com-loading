<style lang="less">
    .ui-loading-mask {
        position: fixed;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        z-index: 9992;
    }

    .ui-loading-wrapper {
        position: absolute;
        margin: 0 auto;
        padding: 20rpx 64rpx;
        top: 50%;
        left: 50%;
        max-width: 670rpx;
        line-height: 20px;
        color: #fff;
        border: none;
        border-radius: 5px;
        background-color: rgba(0, 0, 0, 0.8);
        overflow: hidden;
        z-index: 9993;
        transform: translate(-50%, -50%);
    }

    .ui-loading-icon {
        margin: 10rpx auto;
        width: 80rpx;
        height: 80rpx;
        background: transparent
        url(data:image/svg+xml;base64,)
        no-repeat;
        background-size: 100%;
        animation: ani-loading 1s steps(12, end) infinite;
    }

    .ui-loading {
        margin: 10rpx auto;
        font-size: 16px;
        text-align: center;
        word-break: break-all;
    }

    @keyframes ani-loading {
        0% {
            transform: rotate3d(0, 0, 1, 0deg);
        }
        100% {
            transform: rotate3d(0, 0, 1, 360deg);
        }
    }
</style>

<template lang="wxml">
    <view class="ui-loading-mask" wx:if="{{visible}}" @touchstart.stop="noop">
        <view class="ui-loading-wrapper">
            <view class="ui-loading-icon"></view>
            <view class="ui-loading">
                <text space="nbsp" decode="true">{{content}}</text>
            </view>
        </view>
    </view>
</template>

<config>
{
}
</config>

<script>
	import Wepy from '@wepy/core';

	Wepy.component({
        data: {
            visible: false,
            content: '加载中'
        },

        methods: {
            noop(e) {
                // Do nothing
                return false;
            },

            _defaultData() {
                return {
                    visible: false,
                    content: '加载中'
                };
            },

            /**
             * 显示加载对话框。
             * @param {Object || String} options 配置项。
             * @param {String} options.content 提示文本。
             */
            show(options) {
                let conf = this._defaultData();
                if ('string' === typeof options) {
                    conf = Object.assign(conf, {
                        content: String(options) || this._defaultData().content
                    });
                } else {
                    conf = Object.assign(conf, options);
                }

                this.visible = true;
                this.content = conf.content;
                this.$apply();
            },

            /**
             * 隐藏加载对话框。
             */
            hide() {
                const conf = this._defaultData();
                for (let prop in conf) {
                    this[prop] = conf[prop];
                }
                this.$apply();
            }
        }
    });
</script>
